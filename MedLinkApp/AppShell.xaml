<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MedLinkApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MedLinkApp"
    xmlns:views="clr-namespace:MedLinkApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="{x:StaticResource Green40}">

    <ShellContent
        Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <TabBar
        >
        <ShellContent
            Icon="home_icon.png"
            Title="Главная"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="HomePage"
            Shell.NavBarIsVisible="False"
            />

        <!--<ShellContent
            Title="Чаты"
            Icon="chats_icon.png"
            ContentTemplate="{DataTemplate views:ChatsPage}"
            Shell.NavBarIsVisible="False"/>-->
        
        <ShellContent
            Title="Аккаунт"
            Icon="account_icon.png"
            ContentTemplate="{DataTemplate views:AccountPage}"
            Shell.NavBarIsVisible="False"/>
    </TabBar>

</Shell>
