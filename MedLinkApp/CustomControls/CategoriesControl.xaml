<?xml version="1.0" encoding="utf-8" ?>
<CollectionView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MedLinkApp.Models"
             x:Class="MedLinkApp.CustomControls.CategoriesControl"
             xmlns:viewModels="clr-namespace:MedLinkApp.ViewModels"
        >
        
        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Horizontal" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate
                x:DataType="models:Category">
                <Border
                    BackgroundColor="{x:StaticResource White95}"
                    StrokeShape="RoundRectangle 10">
                    <Label
                        Text="{Binding CategoryName}"/>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
</CollectionView>
